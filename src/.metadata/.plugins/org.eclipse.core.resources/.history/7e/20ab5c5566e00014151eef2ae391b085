package at.uibk.los.model.mocks;

import java.util.Map;

import at.uibk.los.model.IDataStorage;
import at.uibk.los.model.ILecture;
import at.uibk.los.model.ILectureBuilder;
import at.uibk.los.model.IQuiz;
import at.uibk.los.model.IQuizBuilder;
import at.uibk.los.model.LectureBuildeMock;

public class DataStorageMock implements IDataStorage
{
	private Map<Integer, ILecture> lectures;
	private Map<Integer, IQuiz> quiz;
	
	
	@Override
	public void addLecture(ILecture lecture) {
		lectures.put(lecture.getId(), lecture)
	}

	@Override
	public void removeLecture(int lectureId) {
		lectures.remove(lectureId);
	}

	@Override
	public Iterable<ILecture> getLectures() {
		return lectures.values();
	}

	@Override
	public void addQuiz(IQuiz quiz) {
		this.quiz.put(quiz.getId(), quiz);		
	}

	@Override
	public void removeQuiz(int quizId) {
		this.quiz.remove(quizId)
	}

	@Override
	public Iterable<IQuiz> getQuiz() {
		return quiz.values();
	}

	@Override
	public IQuizBuilder getQuizBuilder() {
		return new QuizBuilderMock();
	}

	@Override
	public ILectureBuilder getLectureBuilder() {
		return new LectureBuildeMock();
	}

	@Override
	public ILectureBuilder getLectureBuilder(ILecture lecture) {
		return new LectureBuildeMock(lecture);
	}

}
