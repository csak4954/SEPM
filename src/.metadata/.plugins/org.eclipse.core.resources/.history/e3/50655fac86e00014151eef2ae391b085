package at.uibk.los.model.mocks;

import java.util.HashMap;
import java.util.Map;

import at.uibk.los.model.ILecture;
import at.uibk.los.model.IQuiz;

public class LectureMock implements ILecture {

	public class UserData {
		
		public UserData(int id, String type) {
			this.id = id;
			this.type = type;
		}
		
		public int id;
		public String type;
	}
	
	private int id;
	private String title;
	private String description;
	private String verificationKey;
	
	private Map<Integer, IQuiz> quiz;
	private Map<Integer, UserData> users;
	
	public LectureMock() {
		quiz = new HashMap<Integer, IQuiz>();
		users = new HashMap<Integer, UserData>();
	}
	
	@Override
	public int getId() {
		return id;
	}
	
	@Override
	public void setId(int id) {
		this.id = id;		
	}
	
	@Override
	public String getTitle() {
		return title;
	}
	
	@Override
	public void setTitle(String title) {
		this.title = title;
	}
	
	@Override
	public String getDescription() {
		return description;
	}
	
	@Override
	public void setDescription(String description) {
		this.description = description;		
	}
	
	@Override
	public String getVerificationKey() {
		return verificationKey;
	}
	@Override
	public void setVerificationKey(String key) {
		this.verificationKey = key;
	}
	
	@Override
	public void addUser(int userId, String type) {
		users.put(id, new UserData(userId, type));
	}
	
	@Override
	public void removeUser(int userId) {
		users.remove(userId);
	}
	
	@Override
	public Iterable<UserData> getUsers() {
		return users.values();
	}
	
	@Override
	public void addQuiz(IQuiz quiz) {
		// TODO Auto-generated method stub
		
	}
	
	@Override
	public void removeQuiz(int quizId) {
		// TODO Auto-generated method stub
		
	}
	
	@Override
	public Iterable<IQuiz> getQuiz() {
		// TODO Auto-generated method stub
		return null;
	}
}
