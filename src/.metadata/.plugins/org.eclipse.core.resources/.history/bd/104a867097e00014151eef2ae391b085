package los;

import static org.junit.Assert.assertNotNull;
import static org.junit.Assert.assertNull;

import org.junit.Before;
import org.junit.BeforeClass;
import org.junit.Test;

import at.uibk.los.model.ILoginProvider;
import at.uibk.los.model.IModel;
import at.uibk.los.model.Model;
import at.uibk.los.model.mocks.StudentLoginProviderMock;
import at.uibk.los.model.mocks.StaffLoginProviderMock;

public class ModelTest
{
	private static IModel model = null;
	private static ILoginProvider studentProvider;
	private static ILoginProvider staffProvider;
	
	@BeforeClass
	public void setUpBeforeClass() throws Exception
	{
		studentProvider = new StudentLoginProviderMock();
		staffProvider = new StaffLoginProviderMock();
	}
	
	@Test
	public void testLogin()
	{
		model = new Model(studentProvider);
		assertNull(model.getUser());
		model.loginUser();
		assertNotNull(model.getUser());
		model.logoffUser();
		assertNull(model.getUser());
	}
	
	@Test 
	public void testModelAddLecture() {
		model.
	}
}
